{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=zsr_underwriting.db"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "logs/zsr-underwriting-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "Claude": {
    "Model": "claude-opus-4-6-20250918",
    "MaxTokens": 4096,
    "TimeoutSeconds": 120
  },
  "TokenManagement": {
    "MaxConversationMessages": 20,
    "MaxConversationTokens": 150000,
    "DailyUserTokenBudget": 500000,
    "DealTokenBudget": 1000000
  },
  "Application": {
    "Name": "Underwriting Analyst",
    "Version": "1.0.0",
    "TosVersion": "1.0"
  },
  "Authentication": {
    "Google": {
      "ClientId": "YOUR_GOOGLE_CLIENT_ID",
      "ClientSecret": "YOUR_GOOGLE_CLIENT_SECRET"
    },
    "Microsoft": {
      "ClientId": "YOUR_MICROSOFT_CLIENT_ID",
      "ClientSecret": "YOUR_MICROSOFT_CLIENT_SECRET"
    }
  },
  "Smtp": {
    "Host": "smtp.gmail.com",
    "Port": 587,
    "UseSsl": true,
    "FromEmail": "noreply@underwritinganalyst.com",
    "FromName": "Underwriting Analyst",
    "Username": "",
    "Password": ""
  },
  "GoogleMaps": {
    "ApiKey": ""
  },
  "AllowedHosts": "underwritinganalyst.com;www.underwritinganalyst.com"
}
