@inherits LayoutComponentBase
@using ZSR.Underwriting.Web.Theme

<MudThemeProvider Theme="ZsrTheme.Instance" IsDarkMode="false" />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<div class="app-layout">
    <IconSidebar />
    <main class="app-main-content">
        @Body
        <footer style="text-align: center; padding: 2rem 1rem 1rem; font-size: 0.75rem; color: #9CA3AF;">
            <a href="/terms" style="color: #9CA3AF; text-decoration: none;">Terms</a>
            <span style="margin: 0 0.375rem;">&middot;</span>
            <a href="/privacy" style="color: #9CA3AF; text-decoration: none;">Privacy</a>
        </footer>
    </main>
</div>

<TrackingInitializer />

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">&#x1f5d9;</span>
</div>
