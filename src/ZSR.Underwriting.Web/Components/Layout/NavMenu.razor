        WORKSPACE
    </MudText>
    <MudNavLink Href="search" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Dashboard">
        Dashboard
    </MudNavLink>
    <MudNavLink Href="deals" Icon="@Icons.Material.Filled.ViewList">
        Deal Pipeline
    </MudNavLink>
