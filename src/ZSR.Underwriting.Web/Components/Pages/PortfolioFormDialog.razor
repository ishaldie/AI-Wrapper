@using MudBlazor

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">@Title</MudText>
    </TitleContent>
    <DialogContent>
        <MudStack Spacing="3">
            <MudTextField @bind-Value="_name" Label="Portfolio Name" Variant="Variant.Outlined" Required="true" />
            <MudSelect @bind-Value="_strategy" Label="Strategy" Variant="Variant.Outlined" Clearable="true">
                @foreach (var s in _strategies)
                {
                    <MudSelectItem Value="@s">@s</MudSelectItem>
                }
            </MudSelect>
            <MudNumericField @bind-Value="_vintageYear" Label="Vintage Year" Variant="Variant.Outlined" />
        </MudStack>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel" Style="text-transform: none;">Cancel</MudButton>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="Submit"
                   Disabled="@string.IsNullOrWhiteSpace(_name)"
                   Style="text-transform: none;">
            @(string.IsNullOrEmpty(InitialName) ? "Create" : "Save")
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] private IMudDialogInstance MudDialog { get; set; } = null!;

    [Parameter] public string Title { get; set; } = "Portfolio";
    [Parameter] public string? InitialName { get; set; }
    [Parameter] public string? InitialStrategy { get; set; }
    [Parameter] public int? InitialVintageYear { get; set; }

    private string _name = "";
    private string? _strategy;
    private int? _vintageYear;

    private static readonly string[] _strategies = ["Value-Add", "Core", "Core-Plus", "Opportunistic"];

    protected override void OnInitialized()
    {
        _name = InitialName ?? "";
        _strategy = InitialStrategy;
        _vintageYear = InitialVintageYear;
    }

    private void Cancel() => MudDialog.Cancel();

    private void Submit()
    {
        MudDialog.Close(DialogResult.Ok(new PortfolioFormResult
        {
            Name = _name,
            Strategy = _strategy,
            VintageYear = _vintageYear
        }));
    }
}
