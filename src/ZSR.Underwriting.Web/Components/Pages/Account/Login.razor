@page "/login"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Identity
@using ZSR.Underwriting.Application.Interfaces
@using ZSR.Underwriting.Domain.Entities
@attribute [AllowAnonymous]
@layout Layout.PublicLayout
@inject UserManager<ApplicationUser> UserManager
@inject IEmailCodeService EmailCodeService
@inject NavigationManager Navigation

<PageTitle>Login - Underwriting Analyst</PageTitle>

<div style="display: flex; justify-content: center; padding-top: 6vh;">
    <div style="width: 100%; max-width: 420px;">

        <div style="text-align: center; margin-bottom: 2rem;" class="animate-in">
            <div style="display: inline-flex; align-items: center; gap: 0.625rem; margin-bottom: 1rem;">
                <div class="auth-brand-icon">
                    <MudIcon Icon="@Icons.Material.Filled.Assessment" Size="Size.Small" Style="color: #FFFFFF;" />
                </div>
                <span style="font-size: 1.25rem; font-weight: 700; color: #1A1D23; letter-spacing: -0.02em;">
                    Underwriting Analyst
                </span>
            </div>
        </div>

        <div class="auth-card animate-in delay-1" style="padding: 2rem;">
            <h2 style="font-size: 1.375rem; font-weight: 700; color: #1A1D23; text-align: center; margin: 0 0 0.25rem 0; letter-spacing: -0.02em;">
                Welcome
            </h2>
            <p style="font-size: 0.875rem; color: #6B7280; text-align: center; margin: 0 0 1.5rem 0;">
                Sign in to your account to continue.
            </p>

            @* Social login buttons *@
            <a href="/api/auth/external-login?provider=Google&returnUrl=@(Uri.EscapeDataString(ReturnUrl()))" class="auth-social-btn" data-enhance-nav="false">
                <svg width="18" height="18" viewBox="0 0 24 24"><path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92a5.06 5.06 0 0 1-2.2 3.32v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.1z"/><path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/><path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/><path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/></svg>
                Continue with Google
            </a>
            <a href="/api/auth/external-login?provider=Microsoft&returnUrl=@(Uri.EscapeDataString(ReturnUrl()))" class="auth-social-btn" data-enhance-nav="false">
                <svg width="18" height="18" viewBox="0 0 21 21"><rect x="1" y="1" width="9" height="9" fill="#F25022"/><rect x="11" y="1" width="9" height="9" fill="#7FBA00"/><rect x="1" y="11" width="9" height="9" fill="#00A4EF"/><rect x="11" y="11" width="9" height="9" fill="#FFB900"/></svg>
                Continue with Microsoft
            </a>

            <div class="auth-or-divider">
                <span>or</span>
            </div>

            @if (!string.IsNullOrEmpty(_errorMessage))
            {
                <MudAlert Severity="Severity.Error" Class="mb-4" Variant="Variant.Outlined" Dense="true">
                    @_errorMessage
                </MudAlert>
            }

            <EditForm Model="CurrentInput" FormName="login" OnValidSubmit="LoginUser" method="post">
                <DataAnnotationsValidator />

                <div class="auth-form-group">
                    <label for="login-email">Email</label>
                    <input type="email" id="login-email" name="Input.Email"
                           value="@CurrentInput.Email" placeholder="you@@company.com" />
                </div>

                <MudButton ButtonType="ButtonType.Submit"
                           Variant="Variant.Filled"
                           FullWidth="true"
                           Style="text-transform: none; font-weight: 600; height: 46px; font-size: 0.9375rem; border-radius: 10px; letter-spacing: 0.01em; background: #F97316; color: #FFFFFF;">
                    Continue
                </MudButton>

                <p style="font-size: 0.875rem; color: #6B7280; text-align: center; margin-top: 1.25rem;">
                    Don't have an account?
                    <a href="/register@(QuerySuffix("?q="))" style="color: #F97316; font-weight: 600; text-decoration: none;">Sign up</a>
                </p>
            </EditForm>
        </div>
    </div>
</div>

@code {
    [SupplyParameterFromForm]
    private LoginEmailModel? Input { get; set; }

    [SupplyParameterFromQuery(Name = "error")]
    private string? ErrorCode { get; set; }

    [SupplyParameterFromQuery(Name = "q")]
    private string? SearchQuery { get; set; }

    private LoginEmailModel CurrentInput => Input ??= new();

    private string? _errorMessage;

    private static readonly Dictionary<string, string> ErrorMessages = new(StringComparer.OrdinalIgnoreCase)
    {
        ["ExternalLoginFailed"] = "External login failed. Please try again.",
        ["NoEmail"] = "The external provider did not share your email. Please use email login instead.",
        ["LinkFailed"] = "Could not link your external account. Please try again.",
        ["CreateFailed"] = "Could not create your account. Please try again."
    };

    protected override void OnInitialized()
    {
        if (!string.IsNullOrEmpty(ErrorCode) && ErrorMessages.TryGetValue(ErrorCode, out var message))
        {
            _errorMessage = message;
        }
    }

    private string QuerySuffix(string prefix) => Helpers.AuthQueryHelper.QuerySuffix(SearchQuery, prefix);
    private string ReturnUrl() => Helpers.AuthQueryHelper.SearchRedirectUrl(SearchQuery);

    private async Task LoginUser()
    {
        if (string.IsNullOrWhiteSpace(CurrentInput.Email))
        {
            _errorMessage = "Please enter your email address.";
            return;
        }

        var user = await UserManager.FindByEmailAsync(CurrentInput.Email);
        if (user == null)
        {
            var registerUrl = $"/register?email={Uri.EscapeDataString(CurrentInput.Email)}";
            if (!string.IsNullOrWhiteSpace(SearchQuery))
                registerUrl += $"&q={Uri.EscapeDataString(SearchQuery)}";
            Navigation.NavigateTo(registerUrl);
            return;
        }

        await EmailCodeService.GenerateCodeAsync(CurrentInput.Email);
        var verifyUrl = $"/verify-code?email={Uri.EscapeDataString(CurrentInput.Email)}";
        if (!string.IsNullOrWhiteSpace(SearchQuery))
            verifyUrl += $"&q={Uri.EscapeDataString(SearchQuery)}";
        Navigation.NavigateTo(verifyUrl);
    }

    public class LoginEmailModel
    {
        public string Email { get; set; } = "";
    }
}
