@using ZSR.Underwriting.Application.DTOs

<MudText Typo="Typo.h6" Class="mb-3">Preferred Inputs</MudText>
<MudGrid>
    <MudItem xs="12" md="6">
        <MudNumericField @bind-Value="Model.RentRollSummary"
                         Label="Rent Roll Summary (Monthly $)"
                         Format="N2" />
    </MudItem>
    <MudItem xs="12" md="6">
        <MudNumericField @bind-Value="Model.T12Summary"
                         Label="T12 / P&L Summary ($)"
                         Format="N2" />
    </MudItem>
    <MudItem xs="12" md="6">
        <MudNumericField @bind-Value="Model.LoanLtv"
                         Label="Loan LTV (%)"
                         Min="0m" Max="100m"
                         Placeholder="65" />
    </MudItem>
    <MudItem xs="12" md="6">
        <MudNumericField @bind-Value="Model.LoanRate"
                         Label="Interest Rate (%)"
                         Min="0m" Max="30m" />
    </MudItem>
    <MudItem xs="12" md="4">
        <MudSwitch @bind-Value="Model.IsInterestOnly"
                   Label="Interest Only"
                   Color="Color.Primary" />
    </MudItem>
    <MudItem xs="12" md="4">
        <MudNumericField @bind-Value="Model.AmortizationYears"
                         Label="Amortization (Years)"
                         Min="1" Max="40"
                         Placeholder="30" />
    </MudItem>
    <MudItem xs="12" md="4">
        <MudNumericField @bind-Value="Model.LoanTermYears"
                         Label="Loan Term (Years)"
                         Min="1" Max="40"
                         Placeholder="5" />
    </MudItem>
</MudGrid>

@code {
    [Parameter, EditorRequired]
    public DealInputDto Model { get; set; } = default!;
}
