@using ZSR.Underwriting.Application.DTOs

<MudText Typo="Typo.h6" Class="mb-3">Required Inputs</MudText>
<MudGrid>
    <MudItem xs="12" md="6">
        <MudTextField @bind-Value="Model.PropertyName"
                      Label="Property Name"
                      Required="true"
                      RequiredError="Property name is required" />
    </MudItem>
    <MudItem xs="12" md="6">
        <MudTextField @bind-Value="Model.Address"
                      Label="Address"
                      Required="true"
                      RequiredError="Address is required" />
    </MudItem>
    <MudItem xs="12" md="6">
        <MudNumericField @bind-Value="Model.UnitCount"
                         Label="Unit Count"
                         Min="1"
                         Required="true"
                         RequiredError="Unit count is required" />
    </MudItem>
    <MudItem xs="12" md="6">
        <MudNumericField @bind-Value="Model.PurchasePrice"
                         Label="Purchase Price ($)"
                         Min="0.01m"
                         Required="true"
                         RequiredError="Purchase price is required"
                         Format="N2" />
    </MudItem>
</MudGrid>

@code {
    [Parameter, EditorRequired]
    public DealInputDto Model { get; set; } = default!;
}
